import React, { useState } from 'react';

// Define types for our form data
interface FormData {
  region: string;
  companyCode: string;
}

// Define types for validation errors
interface ValidationErrors {
  region?: string;
  companyCode?: string;
}

// Define job data type for the table
interface JobData {
  ticket: string;
  jobName: string;
  jobId: string;
  priority: string;
  procedure: string;
  dueOut: string;
  description: string;
  company: string;
  createTime: string;
  submitTime: string;
  status: string;
}

const Main: React.FC = () => {
  // State for form data
  const [formData, setFormData] = useState<FormData>({
    region: '',
    companyCode: ''
  });

  // State for validation errors
  const [errors, setErrors] = useState<ValidationErrors>({});

  // State for job data with proper typing
  const [jobData, setJobData] = useState<JobData[]>([
    {
      ticket: 'T001',
      jobName: 'CSS-ESS Processing',
      jobId: 'J001',
      priority: 'High',
      procedure: 'Standard',
      dueOut: '2023-12-15',
      description: 'Process monthly CSS-ESS data',
      company: 'Company A',
      createTime: '2023-12-01 09:00',
      submitTime: '2023-12-01 10:00',
      status: 'Active'
    },
    {
      ticket: 'T002',
      jobName: 'Payroll Processing',
      jobId: 'J002',
      priority: 'Medium',
      procedure: 'Standard',
      dueOut: '2023-12-16',
      description: 'Generate payroll reports',
      company: 'Company B',
      createTime: '2023-12-02 09:00',
      submitTime: '2023-12-02 10:00',
      status: 'Submitted'
